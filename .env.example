# =============================================================================
# .env.example
#
# 이 파일을 복사해서 .env 로 만든 뒤 실제 값을 채우세요.
#   cp .env.example .env
#
# .env 파일은 절대 git에 커밋하지 마세요.
# 항목별 요구수준: [REQUIRED:prod,staging] | [OPTIONAL] | [CONDITIONAL]
# =============================================================================


# =============================================================================
# [BACKEND] JWT
# =============================================================================

# [REQUIRED:prod,staging] 현재 서명 키. 최소 32바이트(256비트) 이상이어야 합니다.
# 생성: openssl rand -hex 64
JWT_SECRET=

# [OPTIONAL] 키 로테이션 중 구 토큰 검증에 사용. 교체 완료 후 제거하세요.
# 형식: JWT_SECRET 과 동일 (openssl rand -hex 64)
JWT_SECRET_ROTATION=

# [OPTIONAL] 토큰 만료 시간 (기본값: 86400000 ms = 24시간)
JWT_EXPIRATION=86400000


# =============================================================================
# [BACKEND] Database
# =============================================================================

# [REQUIRED:prod,staging] DB 사용자명 (기본값: root 는 로컬 전용)
DB_USERNAME=root

# [REQUIRED:prod,staging] DB 패스워드. 프로덕션은 최소 12자 이상 필수.
# 생성: openssl rand -base64 24
DB_PASSWORD=


# =============================================================================
# [BACKEND] Mail (Gmail App Password)
# =============================================================================

# [CONDITIONAL] AUTH_DEMO_MODE=false 이면 필수 (실제 이메일 발송)
# Gmail → 구글 계정 → 보안 → 앱 비밀번호에서 발급
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=


# =============================================================================
# [BACKEND] Google OAuth2
# =============================================================================

# [CONDITIONAL] Google 로그인 사용 시 필수
# https://console.cloud.google.com → API 및 서비스 → 사용자 인증 정보
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=


# =============================================================================
# [BACKEND] Polygon 블록체인 결제
# =============================================================================

# [CONDITIONAL] 결제 기능 사용 시 필수. 형식: 0x + 64 hex chars (256비트)
# 생성: 지갑 생성 도구 사용 (MetaMask, ethers.js 등). 자금 이동이 가능하므로 보안에 특히 주의.
SENDER_PRIVATE_KEY=

# [OPTIONAL] 기본값은 Amoy 테스트넷. 메인넷: https://polygon-rpc.com
POLYGON_RPC_URL=https://rpc-amoy.polygon.technology

# [CONDITIONAL] 결제 수취 지갑 주소. 형식: 0x + 40 hex chars
RECEIVER_WALLET=

# [CONDITIONAL] USDC 컨트랙트 주소. 형식: 0x + 40 hex chars
USDC_CONTRACT_ADDRESS=

# [OPTIONAL] Amoy 테스트넷=80002, 폴리곤 메인넷=137
POLYGON_CHAIN_ID=80002


# =============================================================================
# [BACKEND] AI 질문 생성 API (하나 이상 설정 권장)
# =============================================================================

# [OPTIONAL] Anthropic Claude API 키
ANTHROPIC_API_KEY=

# [OPTIONAL] Google Gemini API 키
GEMINI_API_KEY=

# [OPTIONAL] Gemini 모델명 (기본값: gemini-1.5-flash)
GEMINI_MODEL=gemini-1.5-flash

# [OPTIONAL] OpenAI API 키
OPENAI_API_KEY=

# [OPTIONAL] OpenAI 모델명 (기본값: gpt-4o-mini)
OPENAI_MODEL=gpt-4o-mini

# [OPTIONAL] OpenAI API 엔드포인트 URL (기본값: OpenAI 공식)
OPENAI_BASE_URL=https://api.openai.com/v1/chat/completions


# =============================================================================
# [BACKEND] Sports API
# =============================================================================

# [OPTIONAL] RapidAPI Sports 키 (SPORTS_API_ENABLED=true 이면 필수)
SPORTS_API_KEY=
SPORTS_API_ENABLED=false

# [OPTIONAL] Sports API 요청 간 딜레이 ms (기본값: 500)
SPORTS_RATE_LIMIT_MS=500

# [OPTIONAL] Sports 경기 데이터 조회 기간 일수 (기본값: 7)
SPORTS_FETCH_WINDOW=7

# [OPTIONAL] football-data.org API 키
FOOTBALL_DATA_API_KEY=

# [OPTIONAL] football-data.org 기본 URL (기본값: https://api.football-data.org/v4)
FOOTBALL_DATA_BASE_URL=https://api.football-data.org/v4

# [OPTIONAL] football-data.org 조회 기간 일수 (기본값: 7)
FOOTBALL_DATA_FETCH_WINDOW=7


# =============================================================================
# [BACKEND] 운영 설정
# =============================================================================

# [OPTIONAL] 인증 데모 모드. true=이메일 미발송(로그만), false=실제 발송
AUTH_DEMO_MODE=false

# [REQUIRED:prod,staging] 프로덕션에서는 반드시 false
RATE_LIMIT_DEV_MODE=false

# [OPTIONAL] 마켓메이커 계정 ID (DB에서 생성 필요)
MARKET_MAKER_MEMBER_ID=1

# [OPTIONAL] 자동 결의 스케줄러 활성화 여부 (기본값: true)
AUTO_RESOLUTION_ENABLED=true


# =============================================================================
# [BACKEND] 질문 생성 스케줄러 (Question Generation)
# =============================================================================

# [OPTIONAL] 질문 생성 전체 활성화 여부 (기본값: true)
QUESTIONGEN_ENABLED=true

# [OPTIONAL] 일별 질문 생성 Cron 표현식 (기본값: 매일 00:05)
QUESTIONGEN_DAILY_CRON=0 5 0 * * *

# [OPTIONAL] 일별 배치 생성 활성화 여부 (기본값: false)
QUESTIONGEN_BATCH_ENABLED=false

# [OPTIONAL] 트렌드 기반 질문 생성 활성화 여부 (기본값: true)
QUESTIONGEN_TREND_ENABLED=true

# [OPTIONAL] 트렌드 질문 생성 Cron 표현식 (기본값: 매일 09:00)
QUESTIONGEN_TREND_CRON=0 0 9 * * *

# [OPTIONAL] Google Trends 지역 코드 (기본값: US)
QUESTIONGEN_TREND_GEO=US

# [OPTIONAL] 질문 생성 최대 재시도 횟수 (기본값: 3)
QUESTIONGEN_MAX_GENERATION_ATTEMPTS=3

# [OPTIONAL] 레거시 인터벌 스케줄러 활성화 여부 (기본값: false)
QUESTIONGEN_LEGACY_INTERVAL_ENABLED=false

# [OPTIONAL] Google Trends API URL (기본값: 공식 URL)
QUESTIONGEN_TRENDS_URL=https://trends.google.com/trends/api/dailytrends

# [OPTIONAL] 생성 시 트렌드 강제 갱신 여부 (기본값: true)
QUESTIONGEN_TRENDS_FORCE_REFRESH_ON_GENERATE=true

# [OPTIONAL] 트렌드 캐시 유효 시간 분 (기본값: 30)
QUESTIONGEN_TRENDS_FRESHNESS_MINUTES=30

# [OPTIONAL] 실시간 트렌드 질문 생성 활성화 여부 (기본값: true)
QUESTIONGEN_REALTIME_TRENDS_ENABLED=true

# [OPTIONAL] 실시간 트렌드 Cron 표현식 (기본값: 15분마다)
QUESTIONGEN_REALTIME_TRENDS_CRON=0 */15 * * * *

# [OPTIONAL] 실시간 트렌드 최대 신호 수 (기본값: 20)
QUESTIONGEN_REALTIME_TRENDS_MAX_SIGNALS=20

# [OPTIONAL] 실시간 트렌드 캐시 유효 시간 분 (기본값: 30)
QUESTIONGEN_REALTIME_TRENDS_FRESHNESS_MINUTES=30

# [OPTIONAL] KOSPI 현재 지수 sanity 기준값 (기본값: 7000)
QUESTIONGEN_SANITY_KOSPI_CURRENT=7000

# [OPTIONAL] NASDAQ 현재 지수 sanity 기준값 (기본값: 22000)
QUESTIONGEN_SANITY_NASDAQ_CURRENT=22000

# [OPTIONAL] 비트코인 현재 가격 sanity 기준값 USD (기본값: 100000)
QUESTIONGEN_SANITY_BITCOIN_CURRENT=100000


# =============================================================================
# [FRONTEND]
# =============================================================================

NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id-here
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your-walletconnect-id
NEXT_PUBLIC_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_BASESCAN_URL=https://sepolia.basescan.org
NEXT_PUBLIC_NETWORK=testnet
