{
  "type": "object",
  "additionalProperties": false,
  "required": [
    "batchId",
    "subcategory",
    "generatedAt",
    "questions"
  ],
  "properties": {
    "batchId": {
      "type": "string",
      "minLength": 8
    },
    "subcategory": {
      "type": "string",
      "minLength": 2
    },
    "generatedAt": {
      "type": "string"
    },
    "questions": {
      "type": "array",
      "minItems": 3,
      "maxItems": 3,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "title",
          "marketType",
          "questionType",
          "voteResultSettlement",
          "resolutionRule",
          "resolutionSource",
          "resolveAt",
          "confidence",
          "rationale",
          "references"
        ],
        "properties": {
          "title": {
            "type": "string",
            "minLength": 10,
            "maxLength": 200
          },
          "marketType": {
            "type": "string",
            "enum": ["VERIFIABLE", "OPINION"]
          },
          "questionType": {
            "type": "string",
            "enum": ["VERIFIABLE", "OPINION"]
          },
          "voteResultSettlement": {
            "type": "boolean"
          },
          "resolutionRule": {
            "type": "string",
            "minLength": 10,
            "maxLength": 1000
          },
          "resolutionSource": {
            "type": ["string", "null"],
            "maxLength": 500
          },
          "resolveAt": {
            "type": "string"
          },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          },
          "rationale": {
            "type": "string",
            "minLength": 10,
            "maxLength": 2000
          },
          "references": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "maxItems": 5
          }
        }
      }
    }
  }
}
